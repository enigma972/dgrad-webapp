{% extends "layout.html.twig" %}

{% block section %}

   <div class="row mt-4">
        <div class="col-md-6 offset-3 bg-white shadow-sm p-5">
        <h6 class="h6 text-center">Veuillez remplir ce formulairepour postuler</h6>
        <hr/>
        <p>Reference de l'offre: <span class="h6 underline" >{{ offre.libelle }}</span> </p>

            {% if candidatureIsSended %}
                {% for message in app.session.flashbag.get('info') %}
                <div class="row mt-2">
                	<div class="col">
                		<div class="alert alert-success alert-dismissible fade show rounded-0" role="alert">
	                        {{message}}
	                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
	                            <span aria-hidden="true">&times;</span>
	                        </button>
	                    </div>
                	</div>
                </div>
                {% endfor %}
            {% else %}
                {{ form_start(candidatureForm) }}
                    {{ form_widget(candidatureForm) }}
                    <br>
                    <button class="btn btn-block btn-primary">Postuler</button>
                {{ form_end(candidatureForm) }}
            {% endif %}
        </div>
    </div>

{% endblock %}