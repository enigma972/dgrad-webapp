{% extends "layout.html.twig" %}

{% block section %}
<div class="container pt-5 pb-5">
    <h2 class="h4 font-weight-bold my-2 text-center">
        <b>Nous contacter</b>
    </h2>
    <div class="row pt-5">
        <div class="col-md-6 mb-1">
            <h3 class="h6">Notre adresse</h3>
            <p>
                <div class="text-justify">
                    <img src="{{ asset('cdn/images/batiment.jpg') }}" alt="" class="img-thumbnail mb-1">
                    <p class="mt-3">Nous sommes au N 26 F, dans le quartier Mutoto à la commune de Matete.</p>
                </div>
            </p>
        </div>
        <div class="col-md-6">
            <h6 class="h6 my-2">Nos contacts :</h6>
            <ul class="list-group list-group-flush mb-2">
                <li class="list-group-item">Téléphone : + 243 89 105 77 76 - 89 651 33 31</li>
                <li class="list-group-item">Mail : dkipata22@gmail.com</li>
            </ul>
            <form action="#" class="border p-2 shadow-sm">
                <legend class="h6 mb-4">Nous serions ravis de lire votre message</legend>
                <div class="form-row form-group">
                    <div class="col">
                        <input type="text" class="form-control rounded-0" placeholder="Prenom">
                    </div>
                    <div class="col">
                        <input type="text" class="form-control rounded-0" placeholder="Nom">
                    </div>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control rounded-0" id="mail" name="mail" placeholder="votre mail">
                </div>
                <div class="form-group">
                    <select class="form-control rounded-0" id="object" name="object">
                        <option value="plainte">Plainte</option>
                        <option value="commentaire">Commentaire général</option>
                        <option value="prix">Demande de prix pour Affiliation</option>
                        <option value="autre">Autre</option>
                    </select>
                </div>
                <div class="form-group">
                    <textarea name="message" class="form-control rounded-0" rows="8">Votre message</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary rounded-0">Envoyer</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row mt-3">
        <div class="map">
            <h6 class="h6">Carte interactive :</h6>
            <div class="alert alert-warning">Vous devez être connecter à internet pour pouvoir afficher la carte.</div>
        </div>
    </div>
</div>

{% endblock %}